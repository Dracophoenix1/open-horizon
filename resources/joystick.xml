<!--os: windows osx linux-->

<joysticks>

    <joystick name="PLAYSTATION(R)3 Controller"> <!--part of the name, ignoring case-->

        <!--left stick-->
        <axis0 control="roll" dead="0.1"/>
        <axis1 control="pitch" dead="0.1"/>
        <axis1 control="pitch" invert="true" os="linux" dead="0.1"/>
        <axis1 control="menu_up_down" os="osx" dead="0.5"/>
        <axis1 control="menu_up_down" os="linux" invert="true" dead="0.5"/>
        <btn1/>

        <!--right stick-->
        <axis2 control="camera_yaw" invert="true" dead="0.1"/>
        <axis3 control="camera_pitch" dead="0.1"/>
        <btn2 control="change_camera"/>

        <!--select-->
        <btn0 control="change_weapon"/>

        <!--start-->
        <btn3 control="pause"/>

        <!--dpad-->
        <btn3 control="menu_prev"/>
        <btn4 control="menu_up"/>
        <btn5 control="menu_next"/>
        <btn6 control="menu_down"/>

        <!--triggers-->
        <btn8 control="-yaw"/>
        <btn9 control="+yaw"/>
        <btn10 control="brake"/>
        <btn11 control="throttle"/>

        <!--buttons-->
        <btn12 control="change_target"/>
        <btn13 control="missile"/>
        <btn14 control="mgun"/>
        <btn13 control="menu_next"/>
        <btn14 control="menu_prev"/>

    </joystick>

    <joystick name="Logitech Extreme 3D">
        <axis0 control="roll" dead="0.01"/>
        <axis1 control="pitch" dead="0.01"/>
        <axis1 control="pitch" os="linux" invert="true" dead="0.01"/>
        <axis2 control="yaw" dead="0.01"/>
        <axis3 control="throttle" os="osx" dead="0.01"/>
        <axis3 control="throttle" os="linux" invert="true" dead="0.01"/>
        <btn0 control="mgun"/>
        <btn1 control="missile"/>
        <btn2 control="missile"/>
        <btn4 control="change_target"/>
        <btn5 control="change_weapon"/>
        <btn6 control="brake"/>
        <btn7 control="brake"/>
        <btn8 control="change_camera"/>
        <btn9 control="change_camera"/>
        <btn10 control="pause"/>
        <btn11 control="pause"/>

        <axis1 control="menu_up_down" os="osx" dead="0.5"/>
        <axis1 control="menu_up_down" os="linux" invert="true" dead="0.5"/>
        <btn12 control="menu_up"/>
        <btn14 control="menu_down"/>
        <btn15 control="menu_prev"/>
        <btn13 control="menu_next"/>
        <btn0 control="menu_next"/>
        <btn1 control="menu_prev"/>
    </joystick>

    <joystick name="Microsoft PC-joystick driver">
        <axis0 control="roll" dead="0.01"/>
        <axis1 control="pitch" invert="true" dead="0.01"/>
        <axis3 control="yaw" dead="0.01"/>
        <axis2 control="throttle" invert="true" dead="0.01"/>
        <btn0 control="mgun"/>
        <btn1 control="missile"/>
        <btn2 control="missile"/>
        <btn4 control="change_target"/>
        <btn5 control="change_weapon"/>
        <btn6 control="brake"/>
        <btn7 control="brake"/>
        <btn8 control="change_camera"/>
        <btn9 control="change_camera"/>
        <btn10 control="pause"/>
        <btn11 control="pause"/>

        <axis1 control="menu_up_down" invert="true" dead="0.5"/>
        <btn12 control="menu_up"/>
        <btn14 control="menu_down"/>
        <btn15 control="menu_prev"/>
        <btn13 control="menu_next"/>
        <btn0 control="menu_next"/>
        <btn1 control="menu_prev"/>
    </joystick>

</joysticks>
